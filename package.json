{
  "name": "music-download-free",
  "version": "2.0.0",
  "description": "基于 Next.js SSR 架构的音乐下载助手，SEO 友好，支持搜索歌单与批量下载",
  "scripts": {
    "dev": "sh -c '[ -s \"$HOME/.nvm/nvm.sh\" ] && . \"$HOME/.nvm/nvm.sh\" && nvm use && node server.js' || node server.js",
    "dev:http": "next dev",
    "build": "sh -c '[ -s \"$HOME/.nvm/nvm.sh\" ] && . \"$HOME/.nvm/nvm.sh\" && nvm use && next build' || next build",
    "postbuild": "node scripts/check-missing-deps.js",
    "start": "next start"
  },
  "keywords": [
    "music",
    "download",
    "netease",
    "nextjs",
    "ssr",
    "music-playlist"
  ],
  "author": "蓉儿",
  "license": "MIT",
  "dependencies": {
    "@types/cookie": "^1.0.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/og": "^0.8.5",
    "cookie": "^1.0.2",
    "i18next": "^25.6.0",
    "NeteaseCloudMusicApi": "^4.28.0",
    "next": "^16.0.0",
    "next-i18next": "^15.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.2.0",
    "sax": "^1.4.1",
    "xml2js": "^0.6.2",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@types/node": "24.9.1",
    "@types/react": "19.2.2",
    "typescript": "5.9.3"
  }
}
